<?xml version="1.0" encoding="UTF-8"?>

<configuration debug="false">

    <property name="LOG_LEVEL_PATTERN" value="%5p [%X{uc}]" />

    <include resource="org/springframework/boot/logging/logback/defaults.xml" />
    <include resource="org/springframework/boot/logging/logback/console-appender.xml" />

    <property name="ROLLING_LOG_FILE_DIR"
        value="${ROLLING_LOG_FILE_DIR:-${APP_LOG_DIR:-.${file.separator}log}}" />
    <property name="ROLLING_LOG_FILE_NAME"
        value="${ROLLING_LOG_FILE_NAME:-${LOG_FILE_NAME:-${spring.application.name:-log}}}" />
    <property name="ROLLING_LOG_FILE_SUFFIX"
        value="${ROLLING_LOG_FILE_SUFFIX:-${LOG_FILE_SUFFIX:-.log}}" />
    <property name="ROLLING_LOG_FILE_PREFIX"
        value="${ROLLING_LOG_FILE_DIR}${file.separator}${ROLLING_LOG_FILE_NAME}" />
    <property name="ROLLING_LOG_FILE_PATH"
        value="${ROLLING_LOG_FILE_PREFIX}${ROLLING_LOG_FILE_SUFFIX}" />

    <!-- 全体 -->
    <property name="FILE_LOG_PATTERN" value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) [%X{user}] %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %.-2048m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
    <appender name="ROLLING_FILE_ALL"
    class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
        </encoder>
        <file>${ROLLING_LOG_FILE_PREFIX}_all${ROLLING_LOG_FILE_SUFFIX}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${ROLLING_LOG_FILE_PREFIX}_all-bak%d{yyyyMMdd}.%i${ROLLING_LOG_FILE_SUFFIX}
            </fileNamePattern>
            <maxHistory>50</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>2MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <logger name="org.springframework.transaction" level="INFO"/> 
    <root level="INFO">
        <appender-ref ref="ROLLING_FILE_ALL" />
    </root>

    <!-- アプリ用 -->
    <property name="FILE_LOG_PATTERN_APP" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %clr(%-40.40logger{39}) %clr(:) %msg%n"/>
    <appender name="ROLLING_FILE_APP"
    class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>${FILE_LOG_PATTERN_APP}</pattern>
        </encoder>
        <file>${ROLLING_LOG_FILE_PREFIX}_app${ROLLING_LOG_FILE_SUFFIX}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${ROLLING_LOG_FILE_PREFIX}_app-bak%d{yyyyMMdd}.%i${ROLLING_LOG_FILE_SUFFIX}
            </fileNamePattern>
            <maxHistory>50</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>2MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <logger name="jp.co.yamaha_motor.gimac" level="INFO" additivity="true">
        <appender-ref ref="ROLLING_FILE_APP" />
    </logger>

</configuration>
